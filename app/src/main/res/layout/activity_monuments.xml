<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Monuments">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/caballo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/caballo" />
                        <ImageView
                            android:id="@+id/estatuaalexanderdubcek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/estatuaalexanderdubcek" />
                        <ImageView
                            android:id="@+id/estatuacamilojosecela"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/estatuacamilojosecela" />
                        <ImageView
                            android:id="@+id/estatuaomarjayyam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/estatuaomarjayyam" />
                        <ImageView
                            android:id="@+id/fdi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/fdi" />
                        <ImageView
                            android:id="@+id/geografiaehistoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/geografiaehistoria" />
                        <ImageView
                            android:id="@+id/multiusos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/multiusos" />
                        <ImageView
                            android:id="@+id/rectorado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/rectorado" />

                </android.support.v7.widget.LinearLayoutCompat>

        </ScrollView>

</android.support.constraint.ConstraintLayout>